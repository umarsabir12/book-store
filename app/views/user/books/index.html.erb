<div class="container">
<h1>Welcome to Book-Store</h1>
  <div class="d-flex justify-content-between align-items-center">
    <h2>Books</h2>
  </div>

  <table class="table">
   <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th>View</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.amount %></td>
      <td><%= link_to 'View',  user_book_path(book) %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
