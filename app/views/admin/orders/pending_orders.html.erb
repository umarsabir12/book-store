<div class="container">
  <h2>List of all pending orders</h2>
  <table class="table">
   <thead>
    <tr>
      <th>Buyer</th>
      <th>Book</th>
      <th>Price</th>
      <th>Accept</th>
      <th>Reject</th>

    </tr>
   </thead>
   <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.user.first_name %></td>
      <td><%= order.book.title %></td>
      <td><%= order.book.amount %></td>
      <td><%= link_to "Accept",  accepted_admin_order_path(order), method: :patch, class: "btn btn-info " %></td>
      <td><%= link_to "Reject",  rejected_admin_order_path(order),method: :patch, class: "btn btn-danger "%></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
