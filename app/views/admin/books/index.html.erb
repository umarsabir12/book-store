<div class = "container">
  <h3 >Welcome <%= current_admin.first_name %> to admin dashboard </h3>
  <br>
  <div class="d-flex justify-content-between">
    <h3>Books</h3>
  </div>
  <% @books.each do |book| %>
    <div class= "mt-4 card">
      <div class= "card-body">
        <div class = "d-flex justify-content-between">
          <div>
            <h5 class="card-title"><%= book.title %></h5>
            <%= link_to 'Show', admin_book_path(book), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_admin_book_path(book), class: 'btn btn-info' %>
            <%= link_to 'Delete', admin_book_path(book), method: :delete, data: {confirm: "Are you sure "}, class: 'btn btn-danger' %>
          </div>
          <div>
            <% if book.published? %>
            <%= link_to "Published",admin_book_path(book), class: 'btn btn-light' %>
            <% else %>
            <%= link_to "Not Published", admin_book_path(book), class: 'btn btn-light' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
